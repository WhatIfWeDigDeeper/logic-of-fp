{
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Active Unit Test",
          "program": "${workspaceFolder}/node_modules/jest/bin/jest",
          "args": [
              "${relativeFile}",
              "--runInBand",
              "--env",
              "node",
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "skipFiles": [
              "<node_internals>/**/*.js",
              "${workspaceRoot}/node_modules/**/*.js"
          ]
      }
  ],
  "compounds": []
}
